{
  "extends": "./tsconfig",
  "compilerOptions": {
    "sourceMap": false,
    "rootDir": "./src",
    "outDir": "./lib"
  },
  "exclude": [
    "src/demo",
    "src/__tests__",
    "src/**/__tests__/**/*.*",
    "src/**/__bench__/**/*.*",
    "src/**/__demo__/**/*.*",
    "src/**/__demos__/**/*.*",
    "src/**/__mocks__/**/*.*",
    "src/**/__jest__/**/*.*",
    "src/**/__mocha__/**/*.*",
    "src/**/__tap__/**/*.*",
    "src/**/__tape__/**/*.*",
    "*.test.ts",
    "*.spec.ts"
  ]
}
